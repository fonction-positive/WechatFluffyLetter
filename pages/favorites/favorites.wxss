page {
  height: 100vh;
}

.page {
  height: 100vh;
}

.list {
  padding: 20rpx;
}

.empty,
.loading,
.no-more {
  color: #aaa;
  text-align: center;
  padding: 40rpx 0;
}

.card {
  display: flex;
  gap: 16rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(0, 0, 0, 0.08);
  margin-bottom: 16rpx;
}

.cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.04);
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  color: black;
}

.brief {
  color: #aaa;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price {
  color: black;
  font-size: 30rpx;
  font-weight: 600;
}
