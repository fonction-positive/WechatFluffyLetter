/**index.wxss**/
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.nav {
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.brand-text {
  font-size: 34rpx;
  font-weight: 700;
  color: black;
}

.nav-actions {
  display: flex;
  gap: 12rpx;
}

.content {
  flex: 1;
  padding-bottom: 120rpx;
}

.swiper {
  width: 100%;
  height: 360rpx;
}

.banner {
  width: 100%;
  height: 360rpx;
  background: rgba(0, 0, 0, 0.04);
}

.banner-placeholder {
  width: 100%;
  height: 360rpx;
  background: rgba(0, 0, 0, 0.04);
}

.section {
  padding: 20rpx;
}

.section-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: black;
}

.view-all {
  padding: 0 14rpx;
  line-height: 1.8;
}

.empty,
.loading,
.no-more {
  color: #aaa;
  text-align: center;
  padding: 40rpx 0;
}

.card {
  display: flex;
  gap: 16rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(0, 0, 0, 0.08);
  margin-bottom: 16rpx;
}

.cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.04);
}

.content2 {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.name-right {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  color: black;
}

.fav {
  color: black;
  font-size: 28rpx;
}

.fav-btn {
  padding: 0 14rpx;
  line-height: 1.8;
}

.brief {
  color: #aaa;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price-row {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.price {
  color: black;
  font-size: 30rpx;
  font-weight: 600;
}

.price-old {
  color: #aaa;
  font-size: 24rpx;
  text-decoration: line-through;
}

.fab {
  position: fixed;
  right: 24rpx;
  bottom: 40rpx;
  padding: 18rpx 22rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(0, 0, 0, 0.2);
  background: #fff;
}

.fab-text {
  color: black;
  font-size: 26rpx;
}
