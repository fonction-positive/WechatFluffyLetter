page {
  height: 100vh;
}

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.qr-card,
.process-card {
  border: 1px solid rgba(0, 0, 0, 0.08);
  border-radius: 16rpx;
  padding: 16rpx;
}

.top {
  flex: 1;
  display: flex;
}

.bottom {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-top: 16rpx;
}

.qr-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.qrcode {
  width: 100%;
  height: 520rpx;
  background: rgba(0, 0, 0, 0.04);
}

.qrcode-placeholder {
  width: 100%;
  height: 520rpx;
  background: rgba(0, 0, 0, 0.04);
}

.qr-hint {
  color: #aaa;
  font-size: 26rpx;
}

.process-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: black;
  margin-bottom: 12rpx;
}

.step {
  color: black;
  font-size: 28rpx;
  line-height: 1.8;
}

.loading {
  color: #aaa;
  text-align: center;
  padding: 40rpx 0;
}
