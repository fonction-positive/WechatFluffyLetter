page {
  height: 100vh;
}

.page {
  padding: 20rpx;
}

.block {
  border: 1px solid rgba(0, 0, 0, 0.08);
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.label {
  color: #aaa;
  font-size: 26rpx;
}

.value {
  flex: 1;
  color: black;
  font-size: 28rpx;
}

.qrcode {
  width: 100%;
  height: 600rpx;
  background: rgba(0, 0, 0, 0.04);
}

.loading {
  color: #aaa;
  text-align: center;
  padding: 40rpx 0;
}
