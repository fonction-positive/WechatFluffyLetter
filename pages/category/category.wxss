page {
  height: 100vh;
}

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.searchbar {
  padding: 16rpx 20rpx 8rpx;
}

.search-input {
  border: 1px solid rgba(0, 0, 0, 0.12);
  border-radius: 16rpx;
  padding: 18rpx 16rpx;
  font-size: 28rpx;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 20rpx 12rpx;
}

.category-row {
  display: inline-flex;
  gap: 12rpx;
}

.category-item {
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(0, 0, 0, 0.12);
  font-size: 26rpx;
}

.category-item.active {
  border: 1px solid rgba(0, 0, 0, 0.5);
}

.list {
  flex: 1;
  padding: 0 20rpx 24rpx;
}

.empty,
.loading,
.no-more {
  color: #aaa;
  text-align: center;
  padding: 40rpx 0;
}

.card {
  display: flex;
  gap: 16rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(0, 0, 0, 0.08);
  margin-bottom: 16rpx;
}

.cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.04);
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  color: black;
}

.fav {
  color: black;
  font-size: 28rpx;
}

.brief {
  color: #aaa;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price-row {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.price {
  color: black;
  font-size: 30rpx;
  font-weight: 600;
}

.price-old {
  color: #aaa;
  font-size: 24rpx;
  text-decoration: line-through;
}
